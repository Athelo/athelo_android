<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/background</item>

        <item name="splashScreenIconSize">288dp</item>
        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_image</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">300</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.Athelo</item>
    </style>

    <style name="Theme.Athelo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="ActiveBottomNavigation" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/navigation_tint</item>
    </style>

    <style name="InactiveBottomNavigation" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/navigation_tint</item>
    </style>

    <style name="FullscreenTransitionDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/alpha_slide_in</item>
        <item name="android:windowShowAnimation">@anim/alpha_slide_in</item>
        <item name="android:windowHideAnimation">@anim/alpha_slide_out</item>
        <item name="android:windowExitAnimation">@anim/alpha_slide_out</item>
    </style>

    <style name="FullscreenDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!--        <item name="android:windowAnimationStyle">@style/FullscreenTransitionDialogAnimation</item>-->
    </style>
</resources>